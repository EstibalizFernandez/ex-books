<div class="row">
    <div class="list-group col-12">
        <div class="list-group-item disabled active">
            <h2 class="mb-0">Authors
                <a href="/authors/create" class="btn btn-primary float-right">+</a>
            </h2>
        </div>
        {{#each authors as |author|}}
        <a href="/authors/{{ author._id }}" class="list-group-item list-group-item-action d-flex justify-content-between">
            {{ author.name }} - {{ author.nationality }}
            <span class="badge badge-success badge-pill">{{date_format author.birthDate }}</span>
        </a>
        {{/each}}
    </div>
</div>
