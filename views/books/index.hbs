<div class="list-group col-4">
    <div class="list-group-item disabled active"><h2 class="mb-0">Books <a href="/books/create" class="btn btn-primary float-right">+</a></h2></div>
{{#each books as |book|}}
    <a href="/books/{{ book._id }}" class="list-group-item list-group-item-action d-flex justify-content-between">
        {{ book.title }} - {{ book.author }}
        <span class="badge badge-{{get_book_rating_state book}} badge-pill">{{ book.rating }}</span>
    </a>
{{/each}}
</div>